<odoo>
    <record id="view_product_template_form_inherit_rented" model="ir.ui.view">
        <field name="name">product.template.form.inherit.rented</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='options']" position="inside">
                <span class="d-inline-block">
                    <field name="rented_bolean"/>
                    <label for="rented_bolean"/>
                </span>
            </xpath>
            <xpath expr="//notebook" position="inside">
                <page name="rent_information" string="Rentar">
                    <group>
                        <field name="rented_price"/>
                        <field name="rented_time_option_ids" widget="many2many_tags"/>
                        <field name="rented_description" widget="text"/>
                    </group>
                    <group>
                        <field name="rented_time_price_ids">
                            <tree editable="bottom">
                                <field name="option_id"/>
                                <field name="base_price"/>
                                <field name="discount_percent"/>
                                <field name="final_price" readonly="1"/>
                            </tree>
                        </field>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
