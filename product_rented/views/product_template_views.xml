<odoo>
    <record id="view_product_template_form_inherit_rented" model="ir.ui.view">
        <field name="name">product.template.form.inherit.rented</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='can_be_expensed']" position="after">
                <field name="rented_bolean"/>
            </xpath>
        </field>
    </record>
</odoo>
