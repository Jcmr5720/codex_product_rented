<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="template_product_rented" name="Rented Products Page">
        <t t-call="website.layout">
            <section class="container my-5">
                <div class="text-center mb-5">
                    <h1 class="display-5 fw-bold">Productos disponibles para renta</h1>
                    <p class="text-muted mb-0">
                        Explora nuestra selección de productos y encuentra la opción perfecta para tus necesidades temporales.
                    </p>
                </div>
                <t t-if="products">
                    <div class="row g-4">
                        <t t-foreach="products" t-as="product">
                            <div class="col-12 col-sm-6 col-lg-4">
                                <div class="card h-100 shadow-sm">
                                    <div class="card-body d-flex flex-column">
                                        <h5 class="card-title" t-esc="product.name"/>
                                        <h6 class="card-subtitle mb-3 text-primary">
                                            Precio de renta: <span t-field="product.rented_price"/>
                                        </h6>
                                        <p class="card-text text-muted" t-esc="product.rented_description"/>
                                        <div class="mt-auto">
                                            <t t-if="product.rented_time_option_ids">
                                                <h6 class="mt-3 mb-2">Opciones de tiempo:</h6>
                                                <ul class="list-group list-group-flush">
                                                    <t t-foreach="product.rented_time_option_ids" t-as="time_option">
                                                        <li class="list-group-item px-0" t-esc="time_option.display_name"/>
                                                    </t>
                                                </ul>
                                            </t>
                                            <t t-if="product.rented_time_price_ids">
                                                <h6 class="mt-3 mb-2">Tarifas de renta:</h6>
                                                <ul class="list-group list-group-flush">
                                                    <t t-foreach="product.rented_time_price_ids" t-as="time_price">
                                                        <li class="list-group-item px-0">
                                                            <span class="fw-semibold" t-esc="time_price.display_name"/>
                                                        </li>
                                                    </t>
                                                </ul>
                                            </t>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </div>
                </t>
                <t t-else="">
                    <div class="alert alert-info" role="alert">
                        Actualmente no hay productos disponibles para renta. Vuelve pronto para descubrir nuevas opciones.
                    </div>
                </t>
            </section>
        </t>
    </template>
</odoo>
